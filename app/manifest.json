{
  "manifest_version": 2,
  "name": "jQuery Inserter",
  "version": "0.1",

  "description": "Insert jQuery anywhere",

  "icons": {
    "16": "/images/icon.png",
    "48": "/images/icon.png",
    "128": "/images/icon.png"
  },

  "permissions": [
    "cookies",
    "https://*.atlassian.net/*"
  ],

  "content_scripts":[
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["/js/content.js"]
    }
  ],

  "browser_action": {
    "default_icon": "/images/icon.png",
    "default_popup": "popup.html"
  }
}
